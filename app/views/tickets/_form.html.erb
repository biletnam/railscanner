<%= form_tag tickets_path(@ticket) %>
  
  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </div>

  <div class="field">
    <%= label_tag :surname %><br>
    <%= text_field_tag :surname %>
  </div>

  <div class="field">
    <%= label_tag :passport_id, 'Document Number' %><br>
    <%= text_field_tag :passport_id %>
  </div>

  <div class="actions">
    <%= hidden_field_tag :train_id, params[:train_id] %>
    <%= submit_tag 'Buy' %>
  </div>
