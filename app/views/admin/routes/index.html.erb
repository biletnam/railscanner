<div class="text-center">
  <h1><%= t('.title') %></h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td>
          <div id="route_name_<%= route.id %>">
            <%= route.name %>
          </div>
          <%= render 'form', route: route, hidden: true %>
        </td>
        <td><%= link_to t('common.show'), [:admin, route] %></td>
        <td><%= link_to t('common.edit'), '', class: 'edit_route', data: { route_id: route.id }  %></td>
        <td><%= link_to 'Delete', [:admin, route], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Route', new_admin_route_path %>
