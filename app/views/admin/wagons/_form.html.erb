<%= form_for [:admin, @train, @wagon.becomes(Wagon)] do |f| %>
  <%= render 'common/errors', resource: @wagon %>
  
  <div class="field">
    <%= f.label :type %>
    <%= f.select(:type, options_for_select({'Super Economy' => :SuperEconomy, 'Economy' => :Economy, 'Comfort' => :Comfort, 'Lux' => :Lux})) %>
  </div>  

  <div class="field">
    <%= f.label :bottom_seats %>
    <%= f.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :top_seats %>
    <%= f.number_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats %>
    <%= f.number_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats %>
    <%= f.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :economy_bottom_seats %>
    <%= f.number_field :economy_bottom_seats %>
  </div>

  <div class="actions">
    <%= f.submit t('.submit', action: @wagon.new_record? ? 'Create' : 'Edit') %>
  </div>
<% end %>
