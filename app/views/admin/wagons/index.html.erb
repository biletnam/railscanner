<h1>Listing Wagons</h1>

<table>
  <thead>
    <tr>
      <th>Wagon Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wagons.each do |wagon| %>
      <tr>
        <td><%= wagon.type %></td>
        <td><%= link_to 'Show', [:admin, wagon]  %></td>
        <td><%= link_to 'Edit', edit_admin_wagon_path(wagon) %></td>
        <td><%= link_to 'Delete', [:admin, wagon], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>   
  </tbody>
</table>

<br>

<%= link_to 'New Wagon', new_admin_wagon_path %>
