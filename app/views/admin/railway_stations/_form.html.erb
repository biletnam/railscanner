<%= form_for [:admin, station], html: { style: "display: #{hidden ? 'none' : 'block'}" } do |f| %>
  <%= render 'common/errors', resource: station %>
  
  <div class="field">
    <%= f.text_field :title, placeholder: 'Title', class: 'input-lg' %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit', action: station.new_record? ? 'Create' : 'Edit'), class: 'btn-lg btn-info' %>
  </div>
<% end %>
